#!/bin/bash

# Arquivo para compilar a biblioteca e o perfilador e colocar em seus respectivos lugares

cd src
g++ -c -Wall -Werror -fpic -o pthread_sprofops.o sprofops.c -lpthread
g++ -shared -o libpthread_sprof.so pthread_sprofops.o

g++ -c -Wall -Werror -fpic -fopenmp -o omp_sprofops.o sprofops.c
g++ -shared -o libomp_sprof.so omp_sprofops.o

rm omp_sprofops.o pthread_sprofops.o
mv libpthread_sprof.so../lib
mv libomp_sprof.so ../lib

g++ -Wall -o sprof sprof.c
mv sprof ../bin
